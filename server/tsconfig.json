{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es2015", "es2017", "dom", "es6"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"jsx": "preserve",
		"sourceMap": true,
		"outDir": "./build"
	},
	"include": ["src"]
}
